<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alexanderkorshunov.quiztimer.MainActivity">

    <Button
        android:text="Admin Off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnDisableAdmin"
        android:layout_alignBaseline="@+id/btnEnableAdmin"
        android:layout_alignBottom="@+id/btnEnableAdmin"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Admin On"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnEnableAdmin"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/txtBxMs"
        android:layout_alignStart="@+id/txtBxMs"
        android:layout_marginBottom="25dp" />

    <Button
        android:text="Start Timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLock"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/txtBxMs"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtBxMs"
        android:layout_marginTop="36dp"
        android:hint="Number of milliseconds till lock"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
